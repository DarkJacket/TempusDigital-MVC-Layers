@model BOL.DTO.ClienteDTO

<section>

    <form asp-action="form" method="post">

        <div class="form-group">
            <label for="FormName">Nome</label>
            <input type="text" class="form-control" placeholder="Fulano de Tal" asp-for="@Model.Nome">
            <span asp-validation-for="@Model.Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="FormCPF">CPF</label>
            <input type="text" class="form-control" placeholder="123.456.789.11" asp-for="@Model.CPF">
            <span asp-validation-for="@Model.CPF" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="FormDateBorn">Data de Nascimento</label>
            <input type="date" class="form-control" asp-for="@Model.DataNascimento">
            <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="FormRenda">Renda Familiar</label>
            <input type="number" class="form-control" placeholder="723" asp-for="@Model.RendaFamiliar">
            <span asp-validation-for="@Model.RendaFamiliar" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>

    </form>

</section>